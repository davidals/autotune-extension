{
    "name": "Autotune",
    "description": "Change the tone of your messages",
    "version": "1.0",
    "manifest_version": 3,
  
    "permissions": [
      "tabs",
      "storage",
      "scripting"
    ],

    "host_permissions": [
      "*://*/*"
    ],
  
    "background": {
      "service_worker": "src/core/background.js",
      "type": "module"
    },
  
    "options_page": "src/ui/options.html",

    "action": {
      "default_popup": "src/ui/popup.html",
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/32.png",
        "128": "icons/128.png"
      }
    },
  
    "icons": {
        "16": "icons/16.png",
        "48": "icons/32.png",
        "128": "icons/128.png"
    },
  
    "content_scripts": [
      {
        "matches": [
          "*://*/*" // Apply content script on all websites
        ],
        "js": ["src/core/content.js"],
        "css": ["src/ui/content.css"],
        "run_at": "document_idle",
        "all_frames": true
      }
    ],

    "web_accessible_resources": [
    {
      "resources": [
        "icons/16.png",
        "icons/32.png",
        "icons/128.png",
        "src/services/*.js",
        "src/utils/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
  }
  